---
import ExpandableCard from "../components/ExpandableCard.astro";
import { cardsData } from "../data/projects.js";
import NoDataCard from "../components/NoDataCard.astro";
import { getI18N } from "@/i18n";

// const cardsData: any[] = [];
//Para cambiar idioma de textos
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="flex flex-col gap-y-3">
  <div class="text-center mb-6">
    <h2 class="text-2xl font-bold text-hub-title dark:text-hub-title-dark">
      {i18n.DELIVERABLES_SECTION.TITLE}
    </h2>
  </div>
  
  {
    cardsData.length > 0 ? (
      cardsData.map((card) => (
        <ExpandableCard
          id={card.id}
          title={card.title}
          subtitle={card.subtitle}
          description={card.description}
          details={card.details}
          isNew={card.isNew}
          showImage={false}
        />
      ))
    ) : (
      <NoDataCard
        message={i18n.DELIVERABLES.empty.message}
        subtitle={i18n.DELIVERABLES.empty.message2}
        imageSrc="/img/notion/white/my-notion-face-transparent_9.png"
      />
    )
  }
</div>
